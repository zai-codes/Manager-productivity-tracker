<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- ðŸ” Search Bar -->
    <EditText
        android:id="@+id/etSearchTask"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="ðŸ” Search"
        android:drawableStart="@drawable/ic_search"
        android:background="@drawable/bg_search"
        android:padding="12dp"
        android:inputType="text" />

    <!-- ðŸ“Š Summary Tiles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/tileToday"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_tile">

            <TextView
                android:id="@+id/tvTodayCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… :Today"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tileScheduled"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_tile">

            <TextView
                android:id="@+id/tvScheduledCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ—“ï¸Scheduled"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tileAll"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_tile">

            <TextView
                android:id="@+id/tvAllCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¥ï¸All"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸ“‹ My Lists -->
    <TextView
        android:id="@+id/tvMyLists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ðŸ“ My Lists"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTaskLists"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

    <!-- âž• Add Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âž•New Reminder" />

        <Button
            android:id="@+id/btnAddList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ŠProgress"
            android:layout_marginStart="12dp" />
    </LinearLayout>

</LinearLayout>
